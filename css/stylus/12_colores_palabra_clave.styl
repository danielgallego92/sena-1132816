section
  margin 20px auto
  width 500px
article
  text-align center
div
  background-color silver
  display inline-block
  height 100px
  font 16px Tahoma
  line-height 40px
  margin 0px 0px -4px -4px
  overflow hidden
  vertical-align top
  width 100px
div span 
	background-color: rgba(0, 0, 0, 0.7)
	color white
	display block
	height 40px
	opacity 0
	transform translateY(-54px)
	transition all 0.2s ease-in
div:hover span
	opacity 1
	transform translateY(0px)
